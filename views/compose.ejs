<h1>Compose</h1>
<form action="/compose" method="POST">
  <div class="form-group">
    <label>Title</label>
    <input class="form-control" type="text" name="postTitle" autocomplete="off" required>
  </div>

  <div class="form-group">

    <label>Post</label>
    <textarea name="postBody" rows="5" cols="155">
</textarea>
  </div>
  <button class="btn btn-primary" type="submit" name="button">Publish</button>
</form>
