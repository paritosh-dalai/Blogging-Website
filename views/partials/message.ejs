
<style>

.alert {
  font-size: 15px;
  padding:1px;
  background-color: #FF4B2B;
  color: white;
}

.closebtn {
  margin-left: 15px;
  color: white;
  font-weight: bold;
  float: right;
  font-size: 22px;
  line-height: 20px;
  cursor: pointer;
  transition: 0.3s;
}

.closebtn:hover {
  color: lightgrey;
}
</style>

<% if(typeof errors != 'undefined'){ %>
<% errors.forEach(function(error){ %>
  <div class="alert">
  <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
    <%= error.msg %>
</div>
<%  }); %>
<% } %>
